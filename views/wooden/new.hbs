<div class="container col-md-8 mt-5">
   <form action="/wooden/add" method="post" class="card p-3 bg-light text-center">
      <h2 class="text text-primary">Add new Wooden</h2>
      <div class="form-group">
         <label class="text-info h6">Name</label>
         <input class="form-control" type="text" name="name" required minlength="3" maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-info h6">Brand</label>
         <input class="form-control" type="text" name="brand" required minlength="3" maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-info h6">Image</label>
         <input class="form-control" type="text" name="image" required>
      </div>
      <div class="form-group mt-3">
         <label class="text-info h6">Price</label>
         <input class="form-control" type="number" name="price" required>
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Color</label>
         <br>
         Red <input type="radio" name="color" value="Red">
         Blue <input type="radio" name="color" value="Blue">
         White <input type="radio" name="color" value="White">
         Yellow <input type="radio" name="color" value="Yellow">
         Gray <input type="radio" name="color" value="Gray">
         {{#equal Wooden.gender "Red"}}
         Red <input type="radio" name="color" value="Red" checked>
         Blue <input type="radio" name="color" value="Blue">
         {{/equal}}
         {{#equal Wooden.gender "Blue"}}
         Red <input type="radio" name="color" value="Red">
         Blue <input type="radio" name="color" value="Blue" checked>
         {{/equal}}
         {{#equal Wooden.gender "White"}}
         Red <input type="radio" name="color" value="Red" checked>
         Blue <input type="radio" name="color" value="Blue">
         White <input type="radio" name="color" value="White">
         {{/equal}}
         {{#equal Wooden.gender "Yellow"}}
         Red <input type="radio" name="color" value="Red" checked>
         Blue <input type="radio" name="color" value="Blue">
         White <input type="radio" name="color" value="White">
         Yellow <input type="radio" name="color" value="Yellow">
         {{/equal}}
         {{#equal Wooden.gender "Gray"}}
         Red <input type="radio" name="color" value="Red" checked>
         Blue <input type="radio" name="color" value="Blue">
         White <input type="radio" name="color" value="White">
         Yellow <input type="radio" name="color" value="Yellow">
         Gray <input type="radio" name="color" value="Gray">
         {{/equal}}
      </div>

      <div class="form-group mt-3">
         <div class="form-group mt-3">
         <label class="text-success h6">Status</label>
         <select name="status" class="form-control">
            <option value="Stock">Stock</option>
            <option value="Not stock">Not stock</option>
         </select>
      </div>
      <div class="form-group mt-3">
         <input class="btn btn-primary mt-3" type="submit" value="Add">
      </div>
   </form>
</div>