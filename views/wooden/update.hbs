<div class="container col-md-8 mt-5">
   <form action="/wooden/edit/{{wooden._id}}" method="post" class="card p-3 bg-light text-center">
      <h2 class="text text-primary">Edit Wooden</h2>
      <div class="form-group">
         <label class="text-success h6">Name</label>
         <input class="form-control" type="text" name="name" value="{{wooden.name}}" required minlength="3"
            maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Brand</label>
         <input class="form-control" type="text" name="brand" value="{{wooden.brand}}" required minlength="3"
            maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Image</label><br>
         <img src="{{wooden.image}}" width="100" height="100">
         <input class="form-control mt-3" type="text" name="image" value="{{wooden.image}}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text-success h6">Price</label>
         <input class="form-control" type="number" name="price" value="{{wooden.price}}"  required>
     </div>
     <div class="form-group mt-3">
         <label class="text-success h6">Color</label>
         <br>
         Red <input type="radio" name="color" value="Red">
         Blue <input type="radio" name="color" value="Blue">
         White <input type="radio" name="color" value="White">
         Yellow <input type="radio" name="color" value="Yellow">
         Gray <input type="radio" name="color" value="Gray">
         {{#equal Wooden.gender "Red"}}
         Red <input type="radio" name="color" value="Red" checked>
         Blue <input type="radio" name="color" value="Blue">
         {{/equal}}
         {{#equal Wooden.gender "Blue"}}
         Red <input type="radio" name="color" value="Red">
         Blue <input type="radio" name="color" value="Blue" checked>
         {{/equal}}
         {{#equal Wooden.gender "White"}}
         Red <input type="radio" name="color" value="Red" checked>
         Blue <input type="radio" name="color" value="Blue">
         White <input type="radio" name="color" value="White">
         {{/equal}}
         {{#equal Wooden.gender "Yellow"}}
         Red <input type="radio" name="color" value="Red" checked>
         Blue <input type="radio" name="color" value="Blue">
         White <input type="radio" name="color" value="White">
         Yellow <input type="radio" name="color" value="Yellow">
         {{/equal}}
         {{#equal Wooden.gender "Gray"}}
         Red <input type="radio" name="color" value="Red" checked>
         Blue <input type="radio" name="color" value="Blue">
         White <input type="radio" name="color" value="White">
         Yellow <input type="radio" name="color" value="Yellow">
         Gray <input type="radio" name="color" value="Gray">
         {{/equal}}
      </div>


     <div class="form-group mt-3">
         <div class="form-group mt-3">
         <label class="text-success h6">Status</label>
         <select name="status" class="form-control">
            <option value="Stock">Stock</option>
            <option value="Not stock">Not stock</option>
         </select>
      </div>
      <div class="form-group mt-3">
         <input class="btn btn-primary mt-3" type="submit" value="Edit">
      </div>
   </form>
</div>