<div class="container col-md-8 mt-5">
   <form action="/paradigm/add" method="post" class="card p-3 bg-light text-center">
      <h2 class="text text-primary">Add new Paradigm</h2>
      <div class="form-group">
         <label class="text-info h6">Name</label>
         <input class="form-control" type="text" name="name" required minlength="3" maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-info h6">Brand</label>
         <input class="form-control" type="text" name="brand" required minlength="3" maxlength="20">
      </div>
      <div class="form-group mt-3">
         <label class="text-info h6">Image</label>
         <input class="form-control" type="text" name="image" required>
      </div>
      <div class="form-group mt-3">
         <label class="text-info h6">Price</label>
         <input class="form-control" type="number" name="price" required>
      </div>
